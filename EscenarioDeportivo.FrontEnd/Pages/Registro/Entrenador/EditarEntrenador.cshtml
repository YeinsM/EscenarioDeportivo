@page
@model EscenarioDeportivo.FrontEnd.Pages.EditarEntrenadorModel
@{
    ViewData["Title"] = "Editar Entrenador";
}
<div class="row justify-content-center bg-light">
    <div class="col-sm-12">
        <h3>Editar Entrenador</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <p class="text-warning">@ViewData["Mensaje"]</p>
    </div>
</div>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-10">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="_entrenador.Id" />
                <div class="form-group row">
                    <label asp-for="_entrenador.Documento" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entrenador.Documento" class="form-control" />
                        <span asp-validation-for="_entrenador.Documento" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entrenador.Nombres" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entrenador.Nombres" class="form-control" />
                        <span asp-validation-for="_entrenador.Nombres" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entrenador.Apellidos" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entrenador.Apellidos" class="form-control" />
                        <span asp-validation-for="_entrenador.Apellidos" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entrenador.Genero" class="col-sm-2 control-label"> </label>
                    <div class="col-sm-10">
                        <select asp-for="_entrenador.Genero" class="form-control"
                            asp-items="@Model.listaGenero">
                            <option value="">Seleccionar el Género</option>
                        </select>
                        <span asp-validation-for="_entrenador.Genero" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entrenador.DisciplinaDeportiva" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entrenador.DisciplinaDeportiva" class="form-control" />
                        <span asp-validation-for="_entrenador.DisciplinaDeportiva" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Actualizar" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}