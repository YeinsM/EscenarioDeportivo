@page
@model EscenarioDeportivo.FrontEnd.Pages.CrearEntrenadorModel
@{
    ViewData["Title"] = "Crear Entrenador";
}
<div class="row justify-content-center bg-light">
    <div class="col-sm-12">
        <h3>Crear Entrenador</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <p class="text-warning">@ViewData["Mensaje"]</p>
    </div>
</div>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-10">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="_equipo.Nombre" />
                <input type="hidden" asp-for="_equipo.CantidadDeportistas" />
                <input type="hidden" asp-for="_equipo.Disciplina" />
                <input type="hidden" asp-for="_equipo.PatrocinadorId" />
                <div class="form-group row">
                    <label asp-for="_equipo.Entrenador.Documento" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_equipo.Entrenador.Documento" class="form-control" />
                        <span asp-validation-for="_equipo.Entrenador.Documento" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_equipo.Entrenador.Nombres" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_equipo.Entrenador.Nombres" class="form-control" />
                        <span asp-validation-for="_equipo.Entrenador.Nombres" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_equipo.Entrenador.Apellidos" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_equipo.Entrenador.Apellidos" class="form-control" />
                        <span asp-validation-for="_equipo.Entrenador.Apellidos" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_equipo.Entrenador.Genero" class="col-sm-2 control-label"> </label>
                    <div class="col-sm-10">
                        <select asp-for="_equipo.Entrenador.Genero" class="form-control"
                            asp-items="@Model.listaGenero">
                            <option value="">Seleccionar el Género</option>
                        </select>
                        <span asp-validation-for="_equipo.Entrenador.Genero" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_equipo.Entrenador.DisciplinaDeportiva" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_equipo.Entrenador.DisciplinaDeportiva" class="form-control" />
                        <span asp-validation-for="_equipo.Entrenador.DisciplinaDeportiva" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Asignar y Crear" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}