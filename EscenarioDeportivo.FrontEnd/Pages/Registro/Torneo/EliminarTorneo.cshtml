@page
@model EscenarioDeportivo.FrontEnd.Pages.EliminarTorneoModel
@{
    ViewData["Title"] = "Eliminar Torneo";
}
<div class="row justify-content-center bg-light">
    <div class="col-sm-12">
        <h3>Eliminar Torneo</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <p class="text-warning">@ViewData["Mensaje"]</p>
    </div>
</div>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-10">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="_torneo.Id" />
                <div class="form-group row">
                    <label asp-for="_torneo.Nombre" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_torneo.Nombre" readonly class="form-control" />
                        <span asp-validation-for="_torneo.Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_torneo.Categoria" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_torneo.Categoria" readonly class="form-control" />
                        <span asp-validation-for="_torneo.Categoria" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_torneo.FechaInicial" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_torneo.FechaInicial" readonly class="form-control" type="date" />
                        <span asp-validation-for="_torneo.FechaInicial" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_torneo.FechaFinal" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_torneo.FechaFinal" readonly class="form-control" type="date" />
                        <span asp-validation-for="_torneo.FechaFinal" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_torneo.Tipo" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_torneo.Tipo" readonly class="form-control" />
                        <span asp-validation-for="_torneo.Tipo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_torneo.MunicipioId" class="col-sm-2 control-label"> </label>
                    <div class="col-sm-10">
                        <select asp-for="_torneo.MunicipioId" disabled class="form-control">
                            <option value="">Seleccionar el municipio</option>
                            if (Model._listaMunicipios != null)
                            {
                                @foreach (var mun in Model._listaMunicipios)
                                {
                                    <option value="@mun.Id">@mun.Nombre</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="_torneo.MunicipioId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Eliminar" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}