@page
@model EscenarioDeportivo.FrontEnd.Pages.EditarDeportistaModel
@{
    ViewData["Title"] = "Editar Deportista";
}
<div class="row justify-content-center bg-light">
    <div class="col-sm-12">
        <h3>Editar Deportista</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <p class="text-warning">@ViewData["Mensaje"]</p>
    </div>
</div>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-10">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="_deportista.Documento" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_deportista.Documento" readonly class="form-control" />
                        <span asp-validation-for="_deportista.Documento" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_deportista.Nombres" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_deportista.Nombres" class="form-control" />
                        <span asp-validation-for="_deportista.Nombres" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_deportista.Apellidos" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_deportista.Apellidos" class="form-control" />
                        <span asp-validation-for="_deportista.Apellidos" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_deportista.Genero" class="col-sm-2 control-label"> </label>
                    <div class="col-sm-10">
                        <select asp-for="_deportista.Genero" class="form-control" asp-items="@Model._listaGenero">
                            <option value="">Seleccionar el Género</option>
                        </select>
                        <span asp-validation-for="_deportista.Genero" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_deportista.Rh" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_deportista.Rh" class="form-control" />
                        <span asp-validation-for="_deportista.Rh" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_deportista.EPS" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_deportista.EPS" class="form-control" />
                        <span asp-validation-for="_deportista.EPS" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_deportista.FechaNacimiento" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_deportista.FechaNacimiento" class="form-control" />
                        <span asp-validation-for="_deportista.FechaNacimiento" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_deportista.Disciplina" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_deportista.Disciplina" class="form-control" />
                        <span asp-validation-for="_deportista.Disciplina" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_deportista.Direccion" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_deportista.Direccion" class="form-control" />
                        <span asp-validation-for="_deportista.Direccion" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_deportista.EquipoId" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <select asp-for="_deportista.EquipoId" class="form-control">
                            <option value="">Seleccionar el Equipo</option>
                            if (Model._listaEquipos != null)
                            {
                                @foreach (var equ in Model._listaEquipos)
                                {
                                    <option value="@equ.Id">@equ.Nombre</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="_deportista.EquipoId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Actualizar" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}