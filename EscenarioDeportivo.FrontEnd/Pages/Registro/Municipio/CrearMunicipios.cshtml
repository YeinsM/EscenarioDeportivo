@page
@model EscenarioDeportivo.FrontEnd.Pages.CrearMunicipiosModel
@{
    ViewData["Title"] = "Crear Municipio";
}

<div class="row justify-content-center bg-light">
    <div class="col-sm-12">
        <h3>Crear Municipio</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <p class="text-warning">@ViewData["Mensaje"]</p>
    </div>
</div>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-10">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="_municipio.Nombre" class="col-sm-2 control-label"> </label>
                    <div class="col-sm-10">
                        <input asp-for="_municipio.Nombre" class="form-control" />
                        <span asp-validation-for="_municipio.Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}