@page
@model EscenarioDeportivo.FrontEnd.Pages.EliminarMunicipioModel
@{
    ViewData["Title"]="Eliminar Municipio";
}
<div class="container">
    <div class="row justify-content-center bg-light">
        <div class="col-sm-12">
            <h3>Eliminar Municipio</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <p class="text-warning">@ViewData["Mensaje"]</p>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="row">
            <div class="col-sm-10">
                <form method="post">
                    <input type="hidden" asp-for="_municipio.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="_municipio.Nombre" class="control-label"> </label>
                        <input asp-for="_municipio.Nombre" readonly class="form-control" />
                        <span asp-validation-for="_municipio.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Eliminar" class="btn btn-secondary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}