@page
@model EscenarioDeportivo.FrontEnd.Pages.VerEquiposModel
@{
    ViewData["Title"]="Equipos";
}
@if (TempData["mensajeCreado"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["mensajeCreado"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="container">
    <div class="row justify-content-center bg-light">
        <div class="col-sm-6">
            <h3>Equipos</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-secondary" asp-page="CrearEquipo">Agregar</a>
        </div>
    </div>
    <div class="row justify-content-center">
        @if (Model._listaVistaEquipo.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Nombre</td>
                        <td>Cantidad Deportistas</td>
                        <td>Disciplina</td>
                        <td>Identificación Patrocinador</td>
                        <td>Nombre Patrocinador</td>
                        <td>Qué desea hacer?</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equ in Model._listaVistaEquipo)
                    {
                        <tr>
                            <td>@equ.Id</td>
                            <td>@equ.Nombre</td>
                            <td>@equ.CantidadDeportistas</td>
                            <td>@equ.Disciplina</td>
                            <td>@equ.PatrocinadorIdentificacion</td>
                            <td>@equ.PatrocinadorNombre</td>
                            <td>
                                <a class="btn btn-outline-info" asp-page="EditarEquipo" asp-route-id="@equ.Id">Editar</a>
                                <a class="btn btn-outline-danger" asp-page="EliminarEquipo" asp-route-id="@equ.Id">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="lead">No hay Equipos registrados!</p>
        }
    </div>
</div>